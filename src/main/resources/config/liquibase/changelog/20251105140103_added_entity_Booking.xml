<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <!--
        Added the entity Booking.
    -->
    <changeSet id="20251105140103-1" author="jhipster">
        <createTable tableName="booking">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="booking_date" type="${datetimeType}">
                <constraints nullable="false" />
            </column>
            <column name="status" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="expiration_date" type="${datetimeType}">
                <constraints nullable="true" />
            </column>
            <column name="note" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="price" type="decimal(21,2)">
                <constraints nullable="false" />
            </column>
            <column name="client_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <column name="unit_id" type="bigint">
                <constraints nullable="false" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here -->
        </createTable>
        <dropDefaultValue tableName="booking" columnName="booking_date" columnDataType="${datetimeType}"/>
        <dropDefaultValue tableName="booking" columnName="expiration_date" columnDataType="${datetimeType}"/>
    </changeSet>
</databaseChangeLog>
